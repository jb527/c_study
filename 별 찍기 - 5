#include <stdio.h>

int main(){
    int N, c, a, n;
    scanf("%d", &N);
    for(int i= 1; i < N+1; i++){
        c = 2*i -1;
        n = N + 1 - i;
        for(int j = n; j > 1; j--)
            printf(" ");
        for(int k = 0; k < c; k++)
            printf("*");
        printf("\n");
    }
    return 0;
}
